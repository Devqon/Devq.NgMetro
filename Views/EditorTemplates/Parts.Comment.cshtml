@model Orchard.Comments.Models.CommentPart

<fieldset class="who">
    <legend id="add-comment">@T("Leave a Comment")</legend>
    @if (WorkContext.CurrentUser == null) {
        <div class="form-group">
            @Html.LabelFor(m => m.Author, T("Name").ToString(), new { @class = "control-label" })
            @Html.TextBoxFor(m => m.Author, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Email, T("Email").ToString(), new { @class = "control-label" })
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.SiteName, T("Url").ToString(), new { @class = "control-label" })
            @Html.TextBoxFor(m => m.SiteName, new { @class = "form-control" })
        </div>
    }
    else {
        @Html.Hidden("Name", WorkContext.CurrentUser.UserName ?? "")
        @Html.Hidden("Email", WorkContext.CurrentUser.Email ?? "")
    }
</fieldset>

<fieldset class="what">
    <div class="form-group">
        @Html.LabelFor(m => m.CommentText, T("Comment").ToString(), new { @class = "control-label" })
        @Html.TextAreaFor(m => m.CommentText, new { rows = 10, cols = 30, @class = "comment-text form-control" })
    </div>
    <div class="form-group">
        @Html.HiddenFor(m => m.CommentedOn)
        @Html.HiddenFor(m => m.RepliedOn)
    </div>
</fieldset>
