@using Orchard.Search.ViewModels;

@{
}


@using(Html.BeginForm("index", "search", new { area = "Orchard.Search" }, FormMethod.Get, new { @class = "search-form", role = "search" })) { 
    <div class="form-group">
        @Html.TextBox("q", (SearchViewModel)Model.ViewModel.Query, new { @class = "form-control", placeholder = T("Search") })
    </div>
    @Html.Hidden("culture", WorkContext.CurrentCulture)
    <button type="submit" class="btn btn-default">@T("Search")</button>
}