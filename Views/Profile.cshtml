@{
    var bio = Model.ContentItem.BodyPart;
    var profile = Model.ContentItem.ExtendedProfilePart;
    var image = profile.Image.FirstMediaUrl;

    var fb = profile.Facebook.Value;
    var twitter = profile.Twitter.Value;
    var github = profile.Github.Value;
    var google = profile.Google.Value;

    var tags = (List<string>) Model.ContentItem.AuthorPart.Tags;
    var distinct = tags.GroupBy(t => t).ToList();
    var most = distinct.Where(d => d.Count() > 2);
    var medium = distinct.Where(d => d.Count() == 2);
    var small = distinct.Where(d => d.Count() == 1);
}

<center>
    <img src="@image" alt="aboutme" width="140" height="140" border="0" class="img-circle">
    <h3 class="media-heading">@profile.DisplayName.Value</h3>
    <span><strong>Skills: </strong></span>
    @foreach (var tag in most) {
        @Html.ActionLink(tag.Key, "Search", "Home", new { area = "Orchard.Tags", tagName = tag.Key }, new { @class = "tag label label-warning" })
    }
    @foreach (var tag in medium)
    {
        @Html.ActionLink(tag.Key, "Search", "Home", new { area = "Orchard.Tags", tagName = tag.Key }, new { @class = "tag label label-info" })
    }
    @foreach (var tag in small)
    {
        @Html.ActionLink(tag.Key, "Search", "Home", new { area = "Orchard.Tags", tagName = tag.Key }, new { @class = "tag label label-warning" })
    }
</center>
<hr>
    <p>
        <strong>Bio: </strong><br>
        <div class="well">
			@if(!string.IsNullOrEmpty(bio.Text)) {
			    Html.Raw(bio.Text);
			}
			else {
			    T("This author has not written a biography yet");
			}
        </div>
    </p>
    <br>
<center>

    <div class="bottom">
        @if (!string.IsNullOrEmpty(twitter))
        {
            <a class="btn btn-primary btn-twitter btn-sm"
               href="https://twitter.com/@twitter"
               target="_blank">
                <i class="fa fa-twitter"></i>
            </a>
        }
        @if (!string.IsNullOrEmpty(google))
        {
            <a class="btn btn-danger btn-sm" rel="publisher"
               href="https://plus.google.com/@google"
               target="_blank">
                <i class="fa fa-google-plus"></i>
            </a>
        }
        @if (!string.IsNullOrEmpty(fb))
        {
            <a class="btn btn-primary btn-sm" rel="publisher"
               href="https://facebook.com/@fb"
               target="_blank">
                <i class="fa fa-facebook"></i>
            </a>
        }
        @if (!string.IsNullOrEmpty(github))
        {
            <a class="btn btn-default btn-sm" rel="publisher"
               href="https://github.com/@github"
               target="_blank">
                <i class="fa fa-github"></i>
            </a>
        }
    </div>
</center>